<% layout("/layouts/boilerplate") %>

<body>
  <!-- step - 6 : once you click on any imge  ak route sara detail yaha eject kr dega -->
  <div class="card col-6 show-card listing-card">
    <h3><%= listing.title%></h3>
    <img
      src="<%= listing.image.url%>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text"><%= listing.description%> <br /></p>
      <p class="card-text"><i>owned by-<%= listing.owner.username %></i></p> <!--Step; 19. work: owner ko display kr raha hu -->
      <p class="card-text">
        &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : ""%>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <!-- end-->

  <br />
  <!--Step - 8: aim: edit update and delet any individual listing. -->
  <% if (currUser && listing.owner._id.equals(currUser._id)) { %> <!--step: 19, work: if you are authorised user only then you could delete or edit listings otherwise button hi nahi dikhaga-->
  <div class="btns mb-3">
    <a
      href="/listings/<%= listing.id %>/edit"
      class="btn btn-dark col-1 offset-2"
      >Edit</a
    >
    <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
<% } %>
  <!-- end -->

  <!-- step:13 - adding review form -->
   <% if(currUser){ %> <!--step: 19, work: ager Curruser exist krta hai toh hi form display hoga otherwise nahi -->
  <h4>Leave a review</h4>
  <form
    action="/listings/<%= listing.id %>/reviews"
    method="POST"
    class="needs-validation mb-4"
    novalidate
  >
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-slot">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <div class="mb-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        name="review[comment]"
        id="comment"
        rows="4"
        class="form-control"
        required
      ></textarea>
    </div>
    <button class="btn btn-primary px-4">Submit</button>
  </form>
  <% } %>
  <!-- end -->

  <!-- Step: 13- jo v review and rating add kiya ab usko display krna hai -->
  <h4>All Reviews</h4>
  <div class="row">
    <% for ( review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">@<%= review.author.username %></h5> <!--step:19, work: user ka naam v review meh dikhna caheya.---> 
        <p class="card-text"><%= review.comment %></p>
        <p
          class="starability-result card-text"
          data-rating="<%= review.rating %>"
        ></p>
      </div>

      <form
        class="mb-3 mt-3"
        method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
      >
        <button class="btn btn-sm btn-outline-danger px-3">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
  <!-- end -->
</body>
